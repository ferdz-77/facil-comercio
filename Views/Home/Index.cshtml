                                                <td>Cartão de Crédito</td>
                                            </tr>
                                            <tr>
                                                <td>José Santos</td>
                                                <td>40,00</td>
                                                <td>Pix</td>
                                            </tr>
                                            <tr>
                                                <td>Ana Costa</td>
                                                <td>25,00</td>
                                                <td>Cartão de Débito</td>
                                            </tr>
                                            <tr>
                                                <td>Pedro Lima</td>
                                                <td>60,00</td>
                                                <td>Dinheiro</td>
                                            </tr>
                                            <tr>
                                                <td>Carla Sousa</td>
                                                <td>70,00</td>
                                                <td>Cartão de Crédito</td>
                                            </tr>
                                            <tr>
                                                <td>Fernando Dias</td>
                                                <td>15,00</td>
                                                <td>Pix</td>
                                            </tr>
                                            <tr>
                                                <td>Sara Alves</td>
                                                <td>20,00</td>
                                                <td>Dinheiro</td>
                                            </tr>
                                            <tr>
                                                <td>Luiz Rocha</td>
                                                <td>35,00</td>
                                                <td>Cartão de Débito</td>
                                            </tr>
                                            <tr>
                                                <td>Paula Mendes</td>
                                                <td>45,00</td>
                                                <td>Pix</td>
                                            </tr>
                                        </table>

                                        <div class="text-center mt-3">
                                            <a href="#" class="text-primary">Ver todos</a>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <!-- Pie Chart -->
                        <div class="col-lg-6 mb-6">
                            <!-- Approach -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Alerta de Estoque</h6>
                                </div>
                                <div class="card-body">
                                    <!-- Tabela de Estoque Mínimo -->
                                    <div id="estoqueMinimo" class="mt-4">

                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Produto</th>
                                                    <th>Estoque Atual</th>
                                                    <th>Estoque Mínimo</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Any())
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@item.Prod_Nome</td>
                                                            <td>@item.Prod_Estoque</td>
                                                            <td>@item.Prod_EstoqueMinimo</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="3" class="text-center">Nenhum produto com estoque baixo.</td>
                                                    </tr>
                                                }
                                            </tbody>

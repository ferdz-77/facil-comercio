@using FacilComercio.Models
@model IEnumerable<LotesProximosValidadeViewModel>

@{
    ViewData["Title"] = "Lotes Próximos à Validade";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Lotes Próximos à Validade</h1>
   
    <div class="text-right mb-3">
        <form asp-action="ExportarRelatorioLotes" method="post">
            <button type="submit" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-download fa-sm text-white-50"></i> Exportar Relatório PDF
            </button>
        </form>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Número do Lote</th>
                            <th>Nome do Produto</th>
                            <th>Quantidade</th>
                            <th>Validade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lote in Model)
                        {
                            <tr>
                                <td>@lote.NumeroLote</td>
                                <td>@lote.ProdutoNome</td>
                                <td>@lote.Quantidade</td>
                                <td>@lote.Validade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    Nenhum lote próximo à validade foi encontrado.
                </div>
            }
        </div>
    </div>
</div>
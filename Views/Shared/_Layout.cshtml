@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(HttpContextAccessor.HttpContext).RequestToken" />


    <title>Fácil Comércio - Dashboard</title>
    <!-- CSS do Bootstrap e do Template -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        /* Cor personalizada para o tema */
        .bg-primary, .btn-primary {
            background-color: #b6d3cd !important;
        }

        .text-primary {
            color: #b6d3cd !important;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
    </style>
</head>
<body>
    
    <div id="wrapper">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Navbar -->
                @await Html.PartialAsync("_Nav")

                <!-- Página principal -->
                @RenderBody()
            </div>

            <!-- Footer -->
            @await Html.PartialAsync("_Footer")
        </div>
    </div>

    <script src="~/js/site.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/jquery/jquery.min.js"></script>


    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <!-- Seção para scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
